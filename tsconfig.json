{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      // if we want to shortcut the imports from shared module
      // "@models/*": [
      //    "./src/shared/models/*"
      // ],
      // "@services/*": [
      //    "./src/shared/services/*"
      // ]
    }
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "index.ts",
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
